{
    "compilerOptions": {
        "target": "ES2016",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "module": "ES6",
        "outDir": "build",
        "moduleResolution": "node",
        "declaration": true,
        "skipLibCheck": true
    },
    "compileOnSave": true,
}